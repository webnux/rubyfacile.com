<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="row">
    <% @posts.each do |post| %>
    <div class="panel panel-default">
      <div class="panel-heading"><%= post.title %></div>
      <div class="panel-body">
        <%= markdown(post.content) %>
      </div>
      <div class="panel-footer"><%= link_to 'Show', post %> - <%= link_to 'Edit', edit_post_path(post) %> - <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></div>
    </div>
    <% end %>
  </div>
</div>


<%= link_to 'New Post', new_post_path %>
