<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="row">
    <% @posts.each do |post| %>
    <div class="panel panel-default">
      <div class="panel-heading"><%= link_to post.title, post %> <% if can? :update, @article %> (<%= link_to 'Edit', edit_post_path(post) %>)<% end %></div>
      <div class="panel-body">
        <%= markdown(post.content) %>
      </div>
      <div class="panel-footer"><% if can? :delete, @article %> <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %><% end %></div>
    </div>
    <% end %>
  </div>
</div>

<% if can? :create, @article %>
<%= link_to 'New Post', new_post_path %>
<% end %>
